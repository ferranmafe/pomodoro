{
  "name": "Pomodoro tracker",
  "description": "Basic pomodoro tracker for Google Chrome",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "static/index.html"
  },
  "icons": {
    "16": "assets/timer-16.png",
    "32": "assets/timer-32.png",
    "48": "assets/timer-48.png",
    "128": "assets/timer-128.png"
  },
  "options_page": "static/options.html",
  "permissions": ["storage"]
}
